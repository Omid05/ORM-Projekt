<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <title>ORM</title>
</head>
<body>
<header id="topRow">
    <form action="/" method="GET" style=><button button style="border-color: transparent;" id="logo">
        <p class="red letter">O</p>
        <p class="letter" >R</p>
        <p class="red letter">M</p>
        </button></form>
<div id="icons">
    <img class="iconImg" src="images/search.png">
    <form action="/cart" method="GET"><button style="background-color: transparent; border-color: transparent;"><img class="iconImg" src="images/cart.png"></button></form>
    <form action="/login" method="GET"><button style="background-color: transparent; border-color: transparent;"><img class="iconImg" src="images/profile.png"></button></form>

</div>
</header>

    <div id="items">

<% items.forEach((item) =>{ %> 
    <tr>
        <td class="item">
    <div class="item">
        <div class="imgplaceholder"></div>
        <p class="itemName"><%= item.item%></p>
      

        <p class="price"><%= item.price%>kr </p>
        <div class="amount">
            <div class="remove"><form action="/remove" method="POST"><input type="hidden" name="item_id" id="item_id" value="<%= item.id%>">
                <input type="hidden" name="item_name"  id="item_name" value="<%= item.item%>"><button class="addText">-</button></form></div>
           
                    <p class="amountNumber">  
                        <%= item.amount%>


                    </p>
            
            <div class="add">
                <form action="/add" method="POST">
                    <input type="hidden" name="item_id" id="item_id" value="<%= item.id%>">
        <input type="hidden" name="item_name"  id="item_id" value="<%= item.item%>">
                    <button class="addText">+</button>
                </form></div>
        </div>
    </div>
</td>
</tr>
    <%}); %>
</div>
<ul>
    <% cart.forEach((item) =>{ %>
    <li>
        <strong><%= item.item %></strong><br>
        <strong><%= item.amount %></strong><br>
        <strong><%= item.totalprice %> kr</strong><br><br>



        

    </li>
    <%}); %>
    <p></p>
</ul>


<footer>

<h2 id="omoss">Om Oss</h2>
<h2 id="kontakt">Kontakt</h2>
</footer>




    <script>
    </script>
</body>
</html>
