<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/login.css">
    <script src="https://accounts.google.com/gsi/client" async defer></script>

</head>

<body style="width: 665px; height: 765px; border: black solid 2px;">
    <h1>Välkommen</h1>
<div id="main">
    <div class="divs" id="google" style="border: 1px solid black;">
        <div class="d-flex justify-content-center login-google" style="padding-left: 32.5%;">
            <div 
              id="g_id_onload"
              data-client_id="DIN_CLIENT_ID_HÄR"
              data-context="signin"
              data-ux_mode="redirect"
              data-login_uri="https://dinwebbplats.se/api/auth/callback"
              data-auto_prompt="false">
            </div>
            <div
              class="g_id_signin"
              data-type="standard"
              data-shape="rectangular"
              data-text="signin_with"
              data-size="large"
              data-logo_alignment="left">
            </div>
          </div>
    </div>    
    <form action="/register" method="POST">
        <div class="divs input-box" id="användarnamn">
            <h3 class="input">Användarnamn</h3>
            <label for="användarnamn">Användarnamn:</label>
            <input type="text" name="användarnamn" required>
          </div>
        <br>
        <div class="divs input-box" id="lösenord">
            <h3 class="input">Lösenord</h3>
            <label for="lösenord">Lösenord:</label>
            <input type="password" name="lösenord" required>
          </div>
        <br>
        <button type="submit">Registrera</button>
      </form>    
    <div class="divs" id="login" style="border: 1px solid black;"><h3 class="padding15">Login</h3></div>
    <div class="divs" id="registrera" style="border: 1px solid black;"><h3 class="padding15">Registrera</h3></div>
</div>

<script>
    document.getElementById("submitButton").addEventListener("click", function () {
      const användarnamn = document.getElementById("AnvändarnamnInput").value;
      const lösenord = document.getElementById("LösenordInput").value;
  
      if (!användarnamn || !lösenord) {
        alert("Fyll i alla fält");
        return;
      }
  
      fetch("http://localhost:3000/api/register", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          användarnamn: användarnamn,
          lösenord: lösenord
        })
      })
      .then(response => response.json())
      .then(data => {
        alert(data.message);
      })
      .catch(error => {
        console.error("Fel:", error);
      });
    });
  </script>
  

</body>
</html>
